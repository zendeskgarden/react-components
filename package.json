{
  "private": true,
  "name": "@zendeskgarden/react-components",
  "version": "0.0.0",
  "scripts": {
    "build": "lerna run build --stream",
    "build:demo": "lerna run build:demo --stream",
    "build:single": "utils/scripts/scoped-npm-command.js --script build",
    "format": "yarn format:package_json && yarn format:js && yarn format:markdown",
    "format:js": "prettier --write 'packages/**/!(dist)/*.js' && prettier --write utils/**/*.js",
    "format:markdown": "prettier --write 'packages/**/!(dist)/!(CHANGELOG)*.md'",
    "format:package_json": "prettier-package-json --write && lerna exec -- prettier-package-json --write",
    "postinstall": "lerna bootstrap --stream",
    "lint": "yarn lint:css && yarn lint:js && yarn lint:markdown",
    "lint:css": "stylelint packages/*/src/**/*.js && stylelint utils/**/*.js",
    "lint:js": "eslint packages/*/src/ utils/ --max-warnings 0",
    "lint:markdown": "markdownlint README.md packages/*/src/**/*.md packages/*/src/*.md packages/*/README.md",
    "new": "utils/scripts/create-package.js",
    "prepare": "yarn build",
    "start": "utils/scripts/scoped-npm-command.js --script start",
    "start:demo": "yarn build:demo && serve demo",
    "tag": "lerna publish --conventional-commits",
    "test": "jest --watch --config=utils/test/jest.config.js",
    "test:all": "jest --config=utils/test/jest.config.js"
  },
  "devDependencies": {
    "@types/react": "^16.3.14",
    "@zendeskgarden/css-variables": "^4.1.3",
    "@zendeskgarden/eslint-config": "^5.0.2",
    "@zendeskgarden/stylelint-config": "^8.0.2",
    "@zendeskgarden/svg-icons": "^4.0.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^22.4.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-add-header-comment": "^1.0.3",
    "babel-plugin-inline-react-svg": "^0.5.2",
    "babel-plugin-styled-components": "^1.5.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "chalk": "^2.4.1",
    "commander": "^2.15.1",
    "del": "^3.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.3",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-jest": "^21.15.1",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-notice": "^0.7.7",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.8.2",
    "fs-extra": "^6.0.1",
    "gh-pages": "^1.1.0",
    "gulp": "^4.0.0",
    "gulp-babel": "^7.0.1",
    "gulp-flatten": "^0.4.0",
    "handlebars": "^4.0.11",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.0.0-rc.6",
    "identity-obj-proxy": "^3.0.0",
    "inline-svg-react": "^0.1.8",
    "inquirer": "^5.2.0",
    "jest": "^22.4.3",
    "jest-enzyme": "^6.0.0",
    "jest-styled-components": "^5.0.1",
    "lerna": "^2.11.0",
    "lodash": "^4.17.10",
    "markdownlint-cli": "^0.8.2",
    "prettier": "^1.12.1",
    "prettier-package-json": "^1.6.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-styleguidist": "^7.0.14",
    "react-svg-inline": "^2.1.0",
    "regenerator-runtime": "^0.11.1",
    "rimraf": "^2.6.2",
    "serve": "^6.5.7",
    "simple-git": "^1.92.0",
    "styled-components": "^3.2.6",
    "stylelint": "^9.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-order": "^0.8.1",
    "stylelint-processor-styled-components": "^1.3.1",
    "svg-react-loader": "^0.4.5",
    "webpack": "^3.12.0",
    "webpack-bundle-analyzer": "^2.12.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn format"
    }
  }
}
