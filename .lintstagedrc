{
  "*.{js,ts,tsx}": [
    "bundlesize --config bundlesize.config.js",
    "stylelint",
    "eslint",
    "test:all --findRelatedTests",
    "prettier --write",
    "git add"
  ],
  "!(*CHANGELOG).md": [
    "markdownlint",
    "prettier --write",
    "git add"
  ],
  "**/package.json": [
    "bundlesize --config bundlesize.config.js",
    "prettier-package-json --write",
    "git add"
  ]
}
