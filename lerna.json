{
  "npmClient": "yarn",
  "version": "independent",
  "ignoreChanges": ["*.md", "*.spec.js", "**/__snapshots__/**", "styleguide.config.js"],
  "command": {
    "publish": {
      "registry": "https://registry.npmjs.org/"
    },
    "version": {
      "push": false,
      "allowBranch": "master",
      "message": "chore(release): publish"
    }
  }
}
